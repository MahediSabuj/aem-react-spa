{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "types": [
      "node",
      "jest"
    ],
    "noFallthroughCasesInSwitch": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
